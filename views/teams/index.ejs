<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/teams/index.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <table>
    <thead>
      <tr>
        <th>Team</th>
        <th>Coach</th>
        <th>Record</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% teams.forEach(team => { %>
        <tr id="teams-idx">
          <td id="team-name"><%= team.name %></td>
          <td><%= team.coach %></td>
          <td><%= team.record %></td>
          <td><a href="/teams/<%= team._id %>">Details</a></td>
          <% if (team.owner.equals(user?.profile._id)) { %>
            <td>
              <form action="/teams/<%= team._id %>?_method=DELETE"
                method="POST">
                <button id="delete-team">Delete Team</button>
              </form>
            </td>
            <% } %>
        </tr>
      <% }) %>
    </tbody>
  </table>





</main>

<%- include('../partials/footer') %> 