<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <table>
    <thead>
      <tr>
        <th>Team</th>
        <th>Coach</th>
        <th>Record</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% teams.forEach(team => { %>
        <tr>
          <td><%= team.name %></td>
          <td><%= team.coach %></td>
          <td><%= team.record %></td>
          <td><a href="/teams/<%= team._id %>">Details</a></td>
          <td>
            <form action="/teams/<%= team._id %>?_method=DELETE"
              method="POST">
              <button>Delete Team</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>





</main>

<%- include('../partials/footer') %> 